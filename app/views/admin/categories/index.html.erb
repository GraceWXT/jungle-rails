<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-warning' %>
  </div>

  <div class="panel panel-default categories">

    <table class="table table-bordered align-middle">
      <thead>
        <tr>
          <th>Category</th>
          <th>Products</th>
          <!-- <th>created_at</th> -->
          <!-- <th>updated_at</th> -->
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>
