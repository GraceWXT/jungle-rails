<header class="page-header">
  <h1>Create an account</h1>
</header>

<%= form_for :user, url: '/users' do |f| %>
  <div class="row mb-3 align-items-center">
    <label for="email" class="col-sm-2 col-form-label">First Name:</label>
    <div class="col-md-4">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row mb-3 align-items-center">
    <label for="email" class="col-sm-2 col-form-label">Last Name:</label>
    <div class="col-md-4">
      <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="row mb-3 align-items-center">
    <label for="email" class="col-sm-2 col-form-label">Email:</label>
    <div class="col-md-4">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="row mb-3 align-items-center">
    <label for="password" class="col-sm-2 col-form-label">Password:</label>
    <div class="col-md-4">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row mb-3 align-items-center">
    <label for="password" class="col-sm-2 col-form-label">Password Confirmation:</label>
    <div class="col-md-4">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="col-md-3 align-items-center">
    <%= f.submit "Submit", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
